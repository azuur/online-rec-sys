{
    "version": "0.2.0",
    "configurations": [
        {
        "name": "Python Debugger: Current File (Integrated Terminal)",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "envFile": "${workspaceFolder}/.env"
        },
        {
        "name": "Python Debugger: Current File (External Terminal)",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "externalTerminal",
        "envFile": "${workspaceFolder}/.env"
        }
    ]
}